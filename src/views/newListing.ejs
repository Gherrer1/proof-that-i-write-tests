<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
	<title>New Listing</title>
</head>
<body>

	<% include partials/dash_navbar.ejs %>

	<div class="container">
		<form method="POST" action="/listings">
			<div class="row">
				<div class="form-group col-md-8">
					<label for="titleInput">Title</label>
					<input type="text" class="form-control" name="title" id="titleInput" required>
				</div>
			</div>
			<div class="form-row">
					<div class="form-group col-md-3">
						<label for="typeInput">Select Type</label>
						<select class="form-control" id="typeInput" name="type">
							<option value="LONG_TERM">long term</option>
							<option value="SHORT_TERM">short term</option>
							<option value="FULL_TIME">full time</option>
						</select>
					</div>
					<div class="form-group col-md-3">
						<label for="languageInput">Select Language</label>
						<select class="form-control" id="languageInput" name="lang">
							<option value="PYTHON">Python</option>
							<option value="JAVASCRIPT">Javascript</option>
							<option value="JAVA">Java</option>
						</select>
					</div>
			</div>
			<div class="row">
				<div class="form-group col-md-10">
					<label for="descInput">Description</label>
					<textarea class="form-control" id="descInput" name="description" rows="9"></textarea>
				</div>
			</div>
			<button type="submit" class="btn btn-primary">Create</button>
		</form>
	</div>
	<!-- just bootstrap -->
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

	<style type="text/css">
		form {
			padding-top: 10px;
		}
	</style>
</body>
</html>