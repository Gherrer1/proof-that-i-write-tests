<% include partials/splash_header.ejs %>

  <div class="container-fluid">
  		<% if(locals.errors && locals.errors.length) { %>
  			<ul class="signup-errors">
				<% locals.errors.forEach(function(err) { %>
					<li><%= err %></li>
				<% }) %>
			</ul>
  		<% } %>
		<form action="/signup" method="POST">
			<div class="form-group">
				<label>First Name: <input type="text" class="form-control form-control-sm" name="fname" required></label> <br>
			</div>
			<div class="form-group">
				<label>Email: <input type="email" class="form-control form-control-sm" name="email" required=""></label>
			</div>
			<div class="form-group">
				<label>Username: <input type="text" class="form-control form-control-sm" name="username" required></label>
				<small id="usernameHelp" class="form-text text-muted">
					<!-- Don't use anything that would give away your identity - we don't want x finding out! -->
				</small>
			</div>
			<div class="form-group">
				<label>Password: <input type="password" class="form-control form-control-sm" name="password" required></label>
			</div>
			<div class="form-group">
				<label>Password (again): <input type="password" class="form-control form-control-sm" name="passwordConfirmation" required></label>
			</div>
			<!-- <input type="submit" name="submit" value="Submit"> -->
			<button type="submit" class="btn btn-primary">Sign Up</button>
		</form>
  </div>


